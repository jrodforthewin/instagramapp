@model InstagramAPIApp.Models.UserMediaAndBio

@{
    ViewBag.Title = "Bio";
}

<script>
    userBioAndMedia = @Html.Raw(Json.Encode(Model));
</script>

<div flex layout-fill>
    <div layout="column" layout-fill>
        <div ng-app="myApp">
            <h1>jrodforthewin</h1>
            <div ng-controller="GridCtrl as appCtrl">
                        <div layout="row" layout-xs="column" layout-wrap layout-align-gt-xs="center">
                            <md-card ng-repeat="tile in appCtrl.colorTiles" flex="100" flex-gt-sm="20" ng-style="{'background': tile.color}">
                                <img src="{{tile.url}}" class="md-card-image" alt="{{tile.caption}}">
                                <md-card-content>
                                    <md-chips>
                                        <md-chip>{{tile.likes}}</md-chip>
                                        <md-chip>{{tile.comments}}</md-chip>
                                    </md-chips>
                                    @*<p>{{tile.likes}} {{tile.comments}}</p>*@
                                </md-card-content>
                                <md-card-footer layout-align="center start">
                                    {{tile.caption}}
                                </md-card-footer>
                            </md-card>
                        </div>
            </div>

        </div>
    </div>
</div>
